{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "strict": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "sourceMap": false,
    "baseUrl": ".",
    "lib": [
      "es6",
      "dom",
      "esnext",
      "scripthost"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
